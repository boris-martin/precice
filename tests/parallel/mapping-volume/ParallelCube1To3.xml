<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <solver-interface dimensions="3">
    <data:scalar name="DataOne" />

    <mesh name="MeshOne">
      <use-data name="DataOne" />
    </mesh>

    <mesh name="MeshTwo">
      <use-data name="DataOne" />
    </mesh>

    <participant name="SolverOne1_3">
      <use-mesh name="MeshOne" provide="on" />
      <write-data name="DataOne" mesh="MeshOne" />
      <export:vtu />
    </participant>

    <participant name="SolverTwo1_3">
      <use-mesh name="MeshOne" from="SolverOne1_3" geometric-filter="no-filter" />
      <use-mesh name="MeshTwo" provide="on" />
      <mapping:linear-cell-interpolation
        direction="read"
        from="MeshOne"
        to="MeshTwo"
        constraint="consistent"
        timing="initial" />
      <read-data name="DataOne" mesh="MeshTwo" />
      <export:vtu />
    </participant>

    <m2n:sockets from="SolverOne1_3" to="SolverTwo1_3" />

    <coupling-scheme:serial-explicit>
      <participants first="SolverOne1_3" second="SolverTwo1_3" />
      <max-time-windows value="1" />
      <time-window-size value="1.0" />
      <exchange data="DataOne" mesh="MeshOne" from="SolverOne1_3" to="SolverTwo1_3" />
    </coupling-scheme:serial-explicit>
  </solver-interface>
</precice-configuration>
